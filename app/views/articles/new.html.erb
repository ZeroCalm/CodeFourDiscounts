<div class="container">
  <h2>Add A New Article</h2>
  <div class="our-form amber lighten-3">
    <%= form_for @article, url: '/articles', method: 'post' do |f| %>
      <label for="title"> Article Title </label>
      <%= f.text_field :title %>
      <label for="body"> How was your experience at <%= @location.name %>: </label>
      <%= f.text_area :body %>
      <%= f.hidden_field :location_id, :value => @location.id %>
      <%= f.submit " Submit My Article! " %>
    <% end %>
  </div>
</div>
