
<div class="container">
<h2><%= @location.location_name %></h2>

  <div>
      <% @location.articles.reverse_each do |article| %>
        <hr>
        <li>Title: <%= link_to article.title, article_path(article) %></li><br>
        <li>By: <%= article.user.user_name %> (<%= article.user.job_function %>)</li><br />
        <li>Content: <%= article.body.truncate(25, separator: /\s/) %></li><br>
        <hr />
      <% end %>
  </div>



  <div class="text-center">
        <%= link_to "New article", new_article_path(@location.id) %><br />
        <%= link_to "Edit Location", edit_location_path(@location.id) %><br />
        <%= link_to "Delete Location", {action:"destroy", id: @location.id}, method: :delete, data: { confirm: 'Are you sure?' } %><br />
        <%= link_to "All Locations", locations_path, method: :get %><br />
  </div>

</div>
